<div class="modal fade" id="repetitiveAlarmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New single alarm</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="repetitiveAlarmForm">
          <input type="hidden" name="modal-id">
          <div class="form-group">
            <label for="modal-name" class="form-control-label">Name:</label>
            <input type="text" class="form-control" name="modal-name" maxlength="255">
          </div>
          <div class="form-group">
            <label for="modal-time" class="form-control-label">Time:</label>
            <input type="time" class="form-control" name="modal-time">
          </div>
          <div class="form-group">
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="modal-day-0" value="1">
                Monday
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="modal-day-1" value="1">
                Tuesday
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="modal-day-2" value="1">
                Wednesday
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="modal-day-3" value="1">
                Thursday
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="modal-day-4" value="1">
                Friday
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="modal-day-5" value="1">
                Saturday
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="modal-day-6" value="1">
                Sunday
              </label>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="$('#repetitiveAlarmForm')[0].reset();">Close</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="addNewRepetitive()">Send</button>
      </div>
    </div>
  </div>
</div>
